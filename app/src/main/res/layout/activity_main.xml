                        android:layout_height="wrap_content" android:id="@+id/textView_party1"
                        android:labelFor="@+id/editText_party1"
                        android:layout_weight="1"
                        android:text="@string/MainView_DefaultTextView" android:completionHint="@string/app_name"
                        android:hint="@string/MainView_TextHint"/>
            </LinearLayout>
            <LinearLayout
