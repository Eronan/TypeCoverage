<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible" android:gravity="end">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="end">
            <TextView
                    android:layout_height="match_parent" android:id="@+id/textView_Generation"
                    tools:text="Generation: " android:layout_width="wrap_content"
                    android:textSize="18sp" android:includeFontPadding="false"
                    android:gravity="center_vertical|end" android:maxLines="1" android:ellipsize="end"
                    android:layout_weight="5"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:layout_weight="3">
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/editText_Generation"
                        android:selectAllOnFocus="false" tools:text="7"
                        android:maxLength="2" android:hint="Generation of Pokemon"
                        tools:ignore="HardcodedText" android:layout_weight="2"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@android:drawable/arrow_up_float"
                            android:id="@+id/imageButton"
                            android:adjustViewBounds="false" android:cropToPadding="false"
                            android:paddingHorizontal="16dp" android:paddingVertical="4dp"
                            android:background="?attr/colorButtonNormal" android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="1dp"
                            android:contentDescription="Up Button"
                            tools:ignore="HardcodedText" android:layout_weight="1"/>
                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@android:drawable/arrow_down_float"
                            android:id="@+id/imageButton2" android:paddingHorizontal="16dp"
                            android:paddingVertical="4dp" android:background="?attr/colorButtonNormal"
                            android:layout_marginHorizontal="1dp" android:layout_marginVertical="1dp"
                            android:contentDescription="Down Button"
                            tools:ignore="HardcodedText" android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_Abilities"
                    android:layout_weight="1" tools:text="Use any Ability"/>
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/checkBox_Moves" android:layout_weight="1"
                    tools:text="Use any Move"/>
        </LinearLayout>
        <LinearLayout
